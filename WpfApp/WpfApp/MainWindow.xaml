<Window x:Class="WpfApp.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:WpfApp.Controls"
        
       
        mc:Ignorable="d"
        
        Title="Patient Details" Height="450" Width="800">
    <Grid>
        <local:Details Margin="0,40,0,0"/>
        <Menu VerticalAlignment="Top" Height="30">
            <MenuItem Header="File" HorizontalAlignment="Stretch" FontSize="15">
                <MenuItem Header="View Patients" Click="ViewPatientClick"/>
                <MenuItem Header="Exit" HorizontalAlignment="Stretch" FontSize="15" Click="ExitClick"/>
            </MenuItem>
            <MenuItem Header="Help" HorizontalAlignment="Stretch" FontSize="15" Click="HelpClick"/>

        </Menu>
    </Grid>
</Window>
