<Window x:Class="WpfApp.ViewPatients"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:WpfApp"
        mc:Ignorable="d"
        Title="ViewPatients" Height="450" Width="800">
    <Grid>
        <ListView Name="lvPatient">
            <ListView.View>
                <GridView >
                    <GridViewColumn Header="Id" Width="60" DisplayMemberBinding="{Binding Id}"/>
                    <GridViewColumn Header="Name" Width="150" DisplayMemberBinding="{Binding Name}"/>
                    <GridViewColumn Header="Age" Width="40" DisplayMemberBinding="{Binding Age}"/>
                    <GridViewColumn Header="Sex" Width="60" DisplayMemberBinding="{Binding Gender}"/>
                    <GridViewColumn Header="Phone" Width="140" DisplayMemberBinding="{Binding Phone}"/>
                    <GridViewColumn Header="Address" Width="150" DisplayMemberBinding="{Binding Address}"/>
                    <GridViewColumn Header="Date" Width="180" DisplayMemberBinding="{Binding Date}"/>
                    
                </GridView>
            </ListView.View>
        </ListView>
    </Grid>
</Window>
